{
  "manifest_version": 2,
  "name": "React Web Extension HMR test",
  "version": "1.0.0",
  "background": {
    "scripts": ["./dist/background.js"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
  "web_accessible_resources": ["/dist/*.json", "/dist/*.js", "/dist/*.css"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./dist/content.js"]
    }
  ],
  "permissions": ["<all_urls>", "storage", "tabs"],
  "options_ui": {
    "page": "dist/options.html",
    "open_in_tab": true
  }
}
